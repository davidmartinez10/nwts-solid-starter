{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "start",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*DevTools listening on.*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": ".*DevTools listening on.*"
          }
        }
      ]
    },
    {
      "type": "shell",
      "label": "dev-hmr",
      "command": "npm run dev-hmr",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*DevTools listening on.*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": ".*DevTools listening on.*"
          }
        }
      ]
    },
    {
      "label": "kill",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "kill-hmr",
      "command": "echo ${input:terminate-hmr}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "start"
    },
    {
      "id": "terminate-hmr",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "dev-hmr"
    }
  ]
}
